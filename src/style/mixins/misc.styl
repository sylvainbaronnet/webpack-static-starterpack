/*
 * stylus helpers
 */

ellipsis =
  display block
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

crisp-edges =
  image-rendering optimizeSpeed
  image-rendering -moz-crisp-edges
  image-rendering   -o-crisp-edges
  image-rendering -webkit-optimize-contrast

/*
 * visually hide content while still visible
 * for screen reader
 */
visually-hidden =
  position absolute
  display inherit
  clip rect(0, 0, 0, 0)
